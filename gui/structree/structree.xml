<?xml version="1.0" encoding="utf-8"?>

<objects>

	<script file="gui/common/functions_civinfo.js"/>
	<script file="gui/common/functions_structree.js"/>
	<script file="gui/common/functions_global_object.js"/>
	<script file="gui/common/functions_utility.js"/>
	<script file="gui/structree/structree.js"/>
	<script file="gui/structree/draw.js"/>
	<script file="gui/structree/load.js"/>

	<!-- Add a translucent black background to fade out the menu page -->
	<object type="image" z="0" sprite="bkTranslucent"/>
	
	<object type="image" style="ModernDialog" size="16 50%-360 100%-16 50%+360">
		
		<object style="TitleText" type="text" size="50%-128 -18 50%+128 14">
			<translatableAttribute id="caption">Structure Tree</translatableAttribute>
		</object>

		<!-- Civ selection -->
		<object size="16 10 100%-16 30">
			<object
				name="civSelectionHeading"
				type="text"
				font="sans-bold-16"
                textcolor="white"
				text_align="left"
				size="100%-264 10 100%-160 48">
				<translatableAttribute id="caption">Civilisation:</translatableAttribute>
			</object>

			<object name="civSelection" type="dropdown" style="ModernDropDown" size="100%-160 8 100% 34">
				<action on="SelectionChange">selectCiv(this.list_data[this.selected]);</action>
			</object>
		</object>
		
		<object
			name="civEmblem"
			type="image"
			size="6 6 96+6 96+6"
			sprite="stretched:pregame/shell/logo/wfg_logo_white.png"
		/>
		
		<object
			name="civName"
			type="text"
			font="sans-bold-20"
			textcolor="white"
			text_align="left"
			text_valign="top"
			size="104 32 100%-8 96">
			<translatableAttribute id="caption">What's in a name?</translatableAttribute>
		</object>
		
		<object
			name="civHistory"
			type="text"
			font="sans-12"
			textcolor="white"
			text_align="left"
			text_valign="top"
			size="104 52 100%-8 100%">
			<translatableAttribute id="caption">Ah, history.</translatableAttribute>
		</object>
		
		<!-- Data display -->
		<object size="0 54+64 100% 100%-54">
			
			<object type="image" size="16 32 48+16 48+32"
				sprite="stretched:session/portraits/technologies/village_phase.png"
			/>
		<!--	<object type="image" size="40 1+98 100%-8 1+98+22" sprite="ProdBar">
				<object type="image" size="2 2 20 20"
					sprite="stretched:session/portraits/technologies/village_phase.png"
				/>
			</object>-->
			<object type="image" size="40 25+98 100%-8 25+98+22" sprite="ProdBar">
				<object type="image" size="2 2 20 20"
					sprite="stretched:session/portraits/technologies/town_phase.png"
				/>
			</object>
			<object type="image" size="40 49+98 100%-8 49+98+22" sprite="ProdBar">
				<object type="image" size="2 2 20 20"
					sprite="stretched:session/portraits/technologies/city_phase.png"
				/>
			</object>
			
			<object type="image" size="16 32+160+10 48+16 48+32+160+10"
				sprite="stretched:session/portraits/technologies/town_phase.png"
			/>
			<object type="image" size="40 25+268 100%-8 25+268+22" sprite="ProdBar">
				<object type="image" size="2 2 20 20"
					sprite="stretched:session/portraits/technologies/city_phase.png"
				/>
			</object>
			
			<object type="image" size="16 32+320 48+16 48+32+320"
				sprite="stretched:session/portraits/technologies/city_phase.png"
			/>
			
			<object type="image" style="TreeDisplay" size="48+16+8 0 100%-16 100%">
				
				<!-- Village Structures -->
				<include file="gui/structree/rows/village_phase.xml"/>
				
				<!-- Town Structures -->
				<include file="gui/structree/rows/town_phase.xml"/>
				
				<!-- City Structures -->
				<include file="gui/structree/rows/city_phase.xml"/>
				
			</object>
			
		</object>
		
		<!-- Close dialog -->
		<object
			type="button"
			style="StoneButton"
			size="100%-164 100%-44 100%-16 100%-16"
		>
			<translatableAttribute id="caption">Close</translatableAttribute>
			<action on="Press">
				<![CDATA[
					Engine.PopGuiPage();
				]]>
			</action>
		</object>

	</object>

</objects>
